{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++ builder",
      "command": "Path\\To\\Compiler",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "-std=c++2b",
        "${workspaceFolder}\\src\\*.cpp",
        "-o",
        "${workspaceFolder}\\bin\\${workspaceFolderBasename}.exe",
        "-I",
        "${workspaceFolder}\\include",
        "-L",
        "${workspaceFolder}\\lib",
        "-lglfw3dll",
        "-lglew32",
        "-lopengl32"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ],
  "version": "2.0.0"
}
